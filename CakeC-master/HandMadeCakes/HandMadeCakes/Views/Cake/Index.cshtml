@model IEnumerable<CakeModel>


    <div class="container">

       

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0 ">
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var Cake in Model)
                    {



                        <div class="card-body">
                            <a type="submit" asp-controller="Cake" asp-action="Details" asp-route-id="@Cake.Id">

                                <img src="/imagem/@Cake.Cover" class="img-inside-card"  alt="">
                            </a>


                            <p>
                            <h6 class="text-body-card">@Cake.Flavor</h6>
                            </p>


                        <a type="submit" asp-controller="Cake" asp-action="Details" asp-route-id="@Cake.Id">

                            <img src="/imagem/@Cake.Cover" class="img-inside-card" alt="">
                        </a>

                    </div>
                  
                        
                    } 
                    
                
                }


                     else
                                        {
                                            <img src="..." class="img-inside-card" />
                                        }

                }
            }
        </div>

  
</div>





