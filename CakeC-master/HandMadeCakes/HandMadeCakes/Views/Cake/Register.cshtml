@using HandMadeCakes.Dto
@model CakeCreateDto

<div class="container mt-5">
    <form method="post" asp-action="Register" asp-controller="Cake" enctype="multipart/form-data">
        <h2>Cadastro de Cake</h2>

        <div class="text-center">
            <label for="ImageFile">
                <img id="img" style="width:150px; height:200px" />
            </label>
        </div>


        <div class="mb-1">
            <label class="form-label mt-3">Image:</label>
            <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" />
        </div>


        <div class="mb-1">
            <label class="form-label">Flavor:</label>
            <input type="text" asp-for="Flavor" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Flavor"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Description:</label>
            <textarea type="text" asp-for="Description" class="form-control shadow-none"> </textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>


        <div class="mb-1">
            <label class="form-label">Price:</label>
            <input type="number" min="1" step="any" asp-for="Price" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>


        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Register</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Back</a>
        </div>


    </form>
</div>


<!--Auxilia na visualizacao inicial da foto carregada -->
<script>


    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });

            reader.readAsDataURL(file);
        }
    }


    )
</script>